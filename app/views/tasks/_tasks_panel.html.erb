  </div>
  <div class="panel-body">
    <%= form_for([@list, @task], :url => list_tasks_path(@list), :html => { :method => :post }) do |f| %>
      <div class="form-group form-group-in-panel">
        <div class="input-group">
          <%= f.text_field :description, placeholder: "Create new task", class: "form-control", 'aria-describedby': "new-task-addon", value: "" %>
          <span class="input-group-btn">
            <%= button_tag(type: "submit", class: "btn btn-default") do %>
              <i class="fa fa-plus fa-fw" aria-hidden="true"></i>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
  <ul class="list-group my-tasks">
    <%= render :collection => @tasks, :partial => "tasks/task_li", :as => :task %>
  </ul>
  <div class="panel-footer">
    <%= form_for @list do |f| %>
      <%= f.check_box :display_tasks, :id => "toggle-event", :class => "toggle-status", :data => {:toggle => "toggle", :on => "Hide completed tasks", :off => "Show completed tasks", :width => "180"}, :checked => checked_option_for_display_tasks, :disabled => @list.tasks.completed.empty? %>
    <% end %>
  </div>
