<div class="row">
  <div class="col-sm-7">
    <fieldset disabled>
      <%= render "tasks/tasks_panel" %>
    </fieldset>
  </div>

  <div class="col-sm-5">
    <div class="panel panel-default task-panel">
      <ul class="list-group my-tasks">
        <li class="list-group-item <%= li_class_for_task(@task) %>">
          <%= form_for_task_status(@task) %>
          <%= form_for_task_priority(@task) %>
          <span class="task-description"><%= @task.description %></span>
        </li>
        <li class="list-group-item">
          A
        </li>
        <li class="list-group-item">
          B
        </li>
      </ul>
    </div>
  </div>

</div>
