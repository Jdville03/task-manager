<% if user_signed_in? %>
  <p class="navbar-text">Signed in as <%= current_user.name %></p>
  <li><%= link_to "<span class='glyphicon glyphicon-log-out' aria-hidden='true'></span> Sign out".html_safe, destroy_user_session_path, method: :delete %></li>
<% else %>
  <li><%= link_to "<span class='glyphicon glyphicon-log-in' aria-hidden='true'></span> Log in".html_safe, new_user_session_path %></li>
  <li><%= link_to 'Sign up', new_user_registration_path %></li>
<% end %>
