<% if user_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user fa-fw" aria-hidden="true"></i></span> <%= current_user.name %> <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <!-- <li><a href="#">Action</a></li> -->
      <!-- <li role="separator" class="divider"></li> -->
      <li class="dropdown-header"><%= current_user.email %></li>
      <li><%= link_to "<i class='fa fa-sign-out fa-fw' aria-hidden='true'></i> Sign out".html_safe, destroy_user_session_path, method: :delete %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to "<i class='fa fa-sign-in fa-fw' aria-hidden='true'></i> Log in".html_safe, new_user_session_path %></li>
  <li><%= link_to 'Sign up', new_user_registration_path %></li>
<% end %>
