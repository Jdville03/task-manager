<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= devise_error_messages! %>
    <h2>Sign up</h2>
    <hr>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="form-group col-md-8 col-md-offset-2">
      <div class="input-group <%= "has-error" if resource.errors[:name].any? %>">
        <span class="input-group-addon" id="name-addon"><i class="fa fa-user-o fa-fw"></i></span>
        <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control", 'aria-describedby': "name-addon" %>
      </div><br>
      <div class="input-group <%= "has-error" if resource.errors[:email].any? %>">
        <span class="input-group-addon" id="email-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
        <%= f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control", 'aria-describedby': "email-addon" %>
      </div><br>
      <div class="input-group <%= "has-error" if resource.errors[:password].any? %>">
        <span class="input-group-addon" id="password-addon"><i class="fa fa-key fa-fw"></i></span>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password (6 characters minimum)", class: "form-control", 'aria-describedby': "password-addon" %>
      </div><br>
      <div class="input-group <%= "has-error" if resource.errors[:password_confirmation].any? %>">
        <span class="input-group-addon" id="password-confirmation-addon"><i class="fa fa-key fa-fw"></i></span>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation", class: "form-control", 'aria-describedby': "password-confirmation-addon" %>
      </div><br>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-8 col-md-offset-2">
      <%= f.submit "Sign up", class: "btn btn-success btn-block" %>
      <p class="text-center">-or-</p>
      <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn btn-block btn-social btn-facebook">
        <span class="fa fa-facebook"></span> Sign in with Facebook
      </a>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p class="text-center text-muted">Already have an account? <%= link_to "Log in", new_session_path(resource_name) %></p>
  </div>
</div>

