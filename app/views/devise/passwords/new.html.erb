<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= devise_error_messages! %>
    <h2 class="marker">Forgot your password?</h2>
    <hr>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 form-group <%= "has-error" if resource.errors[:email].any? %>">
      <div class="input-group">
        <span class="input-group-addon" id="email-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
        <%= f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control", 'aria-describedby': "email-addon" %>
      </div><br>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-sm-8 col-sm-8 col-sm-offset-2">
      <%= f.submit "Send me reset password instructions", class: "btn btn-success-alt btn-block" %>
      <div class="text-center">-or-</div>
      <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn btn-block btn-social btn-facebook">
        <span class="fa fa-facebook"></span> Sign in with Facebook
      </a>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <p class="text-center text-muted">
      Already have an account? <%= link_to "Log in", new_session_path(resource_name) %><br>
      Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %>
    </p>
  </div>
</div>

<%# render "devise/shared/links" %>
