<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= devise_error_messages! %>
    <h2>Forgot your password?</h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="row">
    <div class="form-group col-md-8 col-md-offset-2">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-8 col-md-8 col-md-offset-2">
      <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p class="text-center">or</p>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to image_tag("icons/FB-f-Logo__blue_29.png") + " Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-block" %><br />
    <% end -%>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p class="text-center text-muted">
      Already have an account? <%= link_to "Log in", new_session_path(resource_name) %><br>
      Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %>
    </p>
  </div>
</div>

<%# render "devise/shared/links" %>
